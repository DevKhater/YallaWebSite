{% extends "@YallaWebsiteFrontendBundle/views/front_base.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/yallawebsitefrontend/css/slick.css') }}" />
    <link rel="stylesheet" href="{{ asset('bundles/yallawebsitefrontend/css/slick-theme.css') }}" />
    <link rel="stylesheet" href="{{ asset('bundles/yallawebsitefrontend/css/jquery.bxslider.css') }}" />
{% endblock %}

{% block body %}
    <div class="pageContent">
        <div class="row" id='homepage_part1'>
            <div class="IndexTitle col-lg-12" >
                <h1>EXCEPTIONAL LEVEL OF ENTERTAINMENT</h1>
            </div>
            <div class="col-lg-12" style="padding: 0px; margin: 0px;">
                 <div style="width:70%;float: left;vertical-align: top;padding-right: 0px; margin-right: -10px;">
                    <ul class="bxslider">
                        {% for slider in home.SliderEntities %}
                            <li>
                                <div class="HomeSliderDiv"> 
                                    <div class="HomeSliderContent" style="background-image: url('{% path  slider.media, 'homePage' %}')">
                                        <div class="HomeSlideDivTitle">
                                            <h3>{{ slider.title }}</h3>
                                            <h5>{{ slider.content[0:100]|raw }}...</h5>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
                <div id='ytDiv' style="float: left;vertical-align: top;width:25%;padding-left: 0px; margin-left: 0px;">
                    <div id="yt_player">    
                        <div id="ytplayer"></div>
                    </div>
                    <div id="hp_gallery" style="background-image: url('{% path  home.selectedGallery.media, 'medium' %}')">

                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <p class="subtitle fancy"><span>WHAT'S ON</span></p>
        </div>
        <div class="row" id='homepage_part2'>
            <div class="col-lg-3">
                <div class="col-lg-12" style="height: 125px; background-color: #000099">{#{% thumbnail home.sideArticles[0].media, 'small' %}#}</div>
                <div class="col-lg-12" style="height: 125px; background-color: #0044aa">{#{% thumbnail home.sideArticles[1].media, 'small' %}#}</div>
            </div>
            <div class="col-lg-6" style="height: 250px; background-color: #000">{% thumbnail home.mainArticle.media, 'small' %}</div>
            <div class="col-lg-3">
                <div class="col-lg-12" style="height: 125px; background-color: #0072b1">{#{% thumbnail home.sideArticles[2].media, 'small' %}#}</div>
                <div class="col-lg-12" style="height: 125px; background-color: #ebebeb">{#{% thumbnail home.sideArticles[0].media, 'small' %}#}</div>
            </div>

        </div>
        <div class="row">
            <p class="subtitle fancy"><span>Hottest Events of the wek</span></p>
        </div>
        <div class="row">
            <div class="col-lg-15" style="height: 200px; background-color:#000 "></div>
            <div class="col-lg-15" style="height: 200px; background-color:#000099 "></div>
            <div class="col-lg-15" style="height: 200px; background-color:#0044aa "></div>
            <div class="col-lg-15" style="height: 200px; background-color:#0072b1 "></div>
            <div class="col-lg-15" style="height: 200px; background-color:#aa6708; margin-right: 0px; "></div>
        </div>
        <div class="row">
            <div class="col-lg-15"></div>
            <div class="col-lg-15" style="height: 200px; background-color:#000099 "></div>
            <div class="col-lg-15" style="height: 200px; background-color:#0044aa "></div>
            <div class="col-lg-15" style="height: 200px; background-color:#0072b1 "></div>
            <div class="col-lg-15"></div>
        </div>
    </div>
{% endblock %}


{% block javascripts %}
    <script src="{{asset('bundles/yallawebsitefrontend/js/jquery.bxslider.min.js')}}"></script>    
    <script>
        // Load the IFrame Player API code asynchronously.
        var tag = document.createElement('script');
        tag.src = "https://www.youtube.com/player_api";
        var firstScriptTag = document.getElementsByTagName('script')[0];
        firstScriptTag.parentNode.insertBefore(tag, firstScriptTag);

        // Replace the 'ytplayer' element with an <iframe> and
        // YouTube player after the API code downloads.
        var player;
        function onYouTubePlayerAPIReady() {
            player = new YT.Player('ytplayer', {
                height: '250',
                width: '100%',
                videoId: '{{home.videoLink}}'
            });
        }


        jQuery(document).ready(function ($) {
            $('.bxslider').bxSlider({
                minSlides: 1,
                maxSlides: 1,
                controls: true,
            });
        });



    </script>
{% endblock %}