{# empty Twig template #}

{% if (entities) %}
    {% if (entities|length) == 1 %}
        {% set class = 'center col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4 col-sm-4 col-sm-offset-4 col-xs-4 col-xs-offset-4' %}
        {% set style = '' %}
    {% elseif  (entities|length) == 2 %}
        {% set class = 'col-lg-4 col-md-4 col-sm-4 col-xs-4' %}
        {% set style = 'margin-right:8%; margin-left:8%;' %}

    {% else %}
        {% set class = 'col-lg-4 col-md-4 col-sm-4 col-xs-4' %}
        {% set style = '' %}
    {%endif %}

    <div id='DisplayedAjaxRow' class="row">
        {%for event in entities%}
            <div class='eventAjaxDiv'>
                <a href="{{path('yalla_website_frontened_event',  {'id': event.slug}) }}" target="__blank">
                    <div class='{{class}}' style="{{style}}border-radius: 5px;min-height: 250px;background-image: url('{% path  event.media, 'displayIndex' %}')">
                        <div class='eventTitleHoverDisplay'>{{ event.title }}</div>
                    </div>
                </a>
        </div>
    {% endfor %}
{% else %}
    NO EVENTS
{% endif %}
</div>